<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BuildingShipBase" Name="cth_ComputerBase" Abstract="True">
		<passability>PassThroughOnly</passability>
	</ThingDef>
	<ThingDef ParentName="cth_ComputerBase">
		<defName>CtH_FormgelDrive</defName>
		<label>Formgel Drive</label>
		<graphicData>
			<texPath>Things/Building/Ship/ShipDroneCore</texPath>
			<graphicClass>SaveOurShip2.Graphic_SingleOnOff</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<researchPrerequisites>
			<li>ShipPilotSeat</li>
		</researchPrerequisites>
		<statBases>
			<WorkToBuild>6000</WorkToBuild>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<tickerType>Normal</tickerType>
		<description>A testbed for making a near-persona AI to controll a Formgel. To allow it to work as desired, it does have to be isolated from the ships network</description>
		<size>(1,1)</size>
		<designationCategory>Ship</designationCategory>
		<comps>
			<li Class="SaveOurShip2.CompProps_ShipCachePart"/>
			<li Class="CompProperties_ShipPart"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>750</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="SaveOurShip2.CompProps_GraphicOnOff"/>
			<li Class="SaveOurShip2.CompProps_BuildingConsciousness">
				<holoHediff>SoSHologramMachine</holoHediff>
			</li>
		</comps>
		<rotatable>false</rotatable>
		<placeWorkers>
			<li>SaveOurShip2.PlaceWorker_OnShipHull</li>
		</placeWorkers>
		<costList>
			<Steel>150</Steel>
			<ComponentSpacer>50</ComponentSpacer>
			<Gold>40</Gold>
		</costList>
		<designationHotKey>Misc3</designationHotKey>
		<constructionSkillPrerequisite>10</constructionSkillPrerequisite>
	</ThingDef>