<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <PipeSystem.PipeNetDef>
        <defName>SoS2_ExoticNet</defName>
        <resource>
            <name>Exotic Particles</name>
            <unit>unit</unit>
            <color>(227,233,168)</color>
            <onlyShowStored>True</onlyShowStored>
            <offTexPath>Things/Item/Resource/ExoticParticles/ExoticParticles_c</offTexPath>
        </resource>
        <pipeDefs>
            <li>SoS2_ExoticFuelPipe</li>
        </pipeDefs>
        <designator>
            <deconstructIconPath>de_eneticon</deconstructIconPath>
            <designationCategoryDef>Ship</designationCategoryDef>
        </designator>
        <overlayOptions>
            <overlayColor>(227,233,168)</overlayColor>
        </overlayOptions>
        <linkToRefuelables>
            <li>
                <thing>ArchotechExoticParticles</thing>
                <ratio>1</ratio>
            </li>
        </linkToRefuelables>
    </PipeSystem.PipeNetDef>

    <DesignatorDropdownGroupDef>
		<defName>SoS2_ExoticFuelPipe_DropdownGroup</defName>
	</DesignatorDropdownGroupDef>

    <ThingDef ParentName="BuildingBase">
		<designatorDropdown>SoS2_ExoticFuelPipe_DropdownGroup</designatorDropdown>
        <defName>SoS2_ExoticFuelPipe</defName>
        <label>exotic fuel pipe</label>
        <description>archotech pipes able to handle exotic particles.</description>
        <thingClass>PipeSystem.Building_Pipe</thingClass>
        <category>Building</category>
        <tickerType>Rare</tickerType>
        <graphicData>
            <texPath>enet_Atlas</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <linkType>Basic</linkType>
            <linkFlags>
                <li>Custom7</li>
            </linkFlags>
            <damageData>
                <rect>(0,0.35,1,0.3)</rect>
            </damageData>
        </graphicData>
        <uiIconPath>eneticon</uiIconPath>
        <uiIconScale>0.7</uiIconScale>
        <building>
            <ai_chillDestination>false</ai_chillDestination>
            <isInert>true</isInert>
            <isEdifice>false</isEdifice>
            <blueprintGraphicData>
                <texPath>Things/Building/Linked/PowerConduit_Blueprint_Atlas</texPath>
            </blueprintGraphicData>
        </building>
        <drawerType>MapMeshOnly</drawerType>
        <altitudeLayer>Conduits</altitudeLayer>
        <passability>Standable</passability>
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
        <statBases>
            <MaxHitPoints>60</MaxHitPoints>
            <WorkToBuild>40</WorkToBuild>
            <Flammability>0</Flammability>
        </statBases>
        <placingDraggableDimensions>1</placingDraggableDimensions>
        <costList>
            <Plasteel>1</Plasteel>
        </costList>
        <comps>
            <li Class="PipeSystem.CompProperties_Resource">
                <pipeNet>SoS2_ExoticNet</pipeNet>
            </li>
        </comps>
        <placeWorkers>
            <li>PipeSystem.PlaceWorker_Pipe</li>
        </placeWorkers>
        <rotatable>false</rotatable>
        <selectable>true</selectable>
        <neverMultiSelect>true</neverMultiSelect>
        <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
        <designationCategory>Ship</designationCategory>
        <constructEffect>ConstructMetal</constructEffect>
        <clearBuildingArea>false</clearBuildingArea>
        <researchPrerequisites>
            <li>ArchotechExotics</li>
        </researchPrerequisites>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
		<designatorDropdown>SoS2_ExoticFuelPipe_DropdownGroup</designatorDropdown>
        <defName>SoS2_ExoticFuelValve</defName>
        <label>exotic fuel valve</label>
        <description>Switches exotic particles flow on/off.</description>
        <thingClass>PipeSystem.Building_PipeValve</thingClass>
        <category>Building</category>
        <graphicData>
            <texPath>enetvalve</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
            <damageData>
                <rect>(0.2,0.2,0.6,0.6)</rect>
            </damageData>
        </graphicData>
        <building>
            <ai_chillDestination>false</ai_chillDestination>
            <allowWireConnection>false</allowWireConnection>
        </building>
        <altitudeLayer>Building</altitudeLayer>
        <passability>Standable</passability>
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <WorkToBuild>100</WorkToBuild>
            <Flammability>0</Flammability>
        </statBases>
        <placingDraggableDimensions>0</placingDraggableDimensions>
        <costList>
            <Plasteel>5</Plasteel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <comps>
            <li Class="PipeSystem.CompProperties_PipeValve">
                <pipeNet>SoS2_ExoticNet</pipeNet>
                <alwaysLinkToPipes>true</alwaysLinkToPipes>
            </li>
            <li Class="CompProperties_Flickable">
                <commandTexture>Things/Item/Resource/ExoticParticles/ExoticParticles_c</commandTexture>
                <commandLabelKey>Key_SoS2_ExoticFuelValve</commandLabelKey>
                <commandDescKey>Key_SoS2_ExoticFuelValveDesc</commandDescKey>
            </li>
        </comps>
        <rotatable>false</rotatable>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <tickerType>Normal</tickerType>
        <designationCategory>Ship</designationCategory>
        <constructEffect>ConstructMetal</constructEffect>
        <researchPrerequisites>
            <li>ArchotechExotics</li>
        </researchPrerequisites>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
		<designatorDropdown>SoS2_ExoticFuelPipe_DropdownGroup</designatorDropdown>
        <defName>SoS2_ExoticFuelTank</defName>
        <label>exotic storage</label>
        <description>An archotech tank that can handle exotic particles.</description>
        <drawerType>MapMeshAndRealTime</drawerType>
        <graphicData>
            <texPath>enettank</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(2,2)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <blockWind>true</blockWind>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>0.40</fillPercent>
        <tickerType>Normal</tickerType>
        <statBases>
            <MaxHitPoints>800</MaxHitPoints>
            <WorkToBuild>800</WorkToBuild>
            <Mass>20</Mass>
            <Flammability>0</Flammability>
        </statBases>
        <size>(2,2)</size>
        <costList>
            <Plasteel>80</Plasteel>
            <Steel>40</Steel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <comps>
            <li Class="PipeSystem.CompProperties_ResourceStorage">
                <pipeNet>SoS2_ExoticNet</pipeNet>
                <storageCapacity>5000</storageCapacity>
                <barSize>(1.25,0.25)</barSize>
                <margin>0.1</margin>
                <centerOffset>(0,0,0)</centerOffset>
                <extractOptions>
                    <texPath>Things/Item/Resource/ExoticParticles/ExoticParticles_c</texPath>
                    <labelKey>Key_SoS2_ExoticFuelExtract</labelKey>
                    <descKey>Key_SoS2_ExoticFuelExtractDesc</descKey>
                    <extractAmount>75</extractAmount>
                    <thing>ArchotechExoticParticles</thing>
                    <ratio>1</ratio>
                </extractOptions>
            </li>
        </comps>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <designationCategory>Ship</designationCategory>
        <staticSunShadowHeight>0.2</staticSunShadowHeight>
        <constructEffect>ConstructMetal</constructEffect>
        <canOverlapZones>false</canOverlapZones>
        <researchPrerequisites>
            <li>ArchotechExotics</li>
        </researchPrerequisites>
    </ThingDef>

    <ThingDef ParentName="FurnitureBase">
		<designatorDropdown>SoS2_ExoticFuelPipe_DropdownGroup</designatorDropdown>
        <defName>SoS2_ExoticFuelHopper</defName>
        <label>fuel hopper</label>
        <description>A specially designed hopper, put exotic particles in it and it will transport the exotic particles into the network.</description>
        <thingClass>Building_Storage</thingClass>
        <graphicData>
            <texPath>enethopper</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
            <drawSize>1.1</drawSize>
            <drawRotated>false</drawRotated>
            <allowFlip>false</allowFlip>
        </graphicData>
        <rotatable>false</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.5</fillPercent>
        <castEdgeShadows>true</castEdgeShadows>
        <pathCost>50</pathCost>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <Mass>2</Mass>
            <WorkToBuild>600</WorkToBuild>
            <Flammability>0</Flammability>
        </statBases>
        <size>(1,1)</size>
        <costList>
            <Steel>30</Steel>
        </costList>
        <building>
            <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
            <fixedStorageSettings>
                <filter>
                    <disallowNotEverStorable>true</disallowNotEverStorable>
                    <thingDefs>
                        <li>ArchotechExoticParticles</li>
                    </thingDefs>
                </filter>
            </fixedStorageSettings>
            <defaultStorageSettings>
                <priority>Important</priority>
                <filter>
                    <disallowNotEverStorable>true</disallowNotEverStorable>
                    <thingDefs>
                        <li>ArchotechExoticParticles</li>
                    </thingDefs>
                </filter>
            </defaultStorageSettings>
        </building>
        <inspectorTabs>
            <li>ITab_Storage</li>
        </inspectorTabs>
        <designationCategory>Ship</designationCategory>
        <staticSunShadowHeight>0.5</staticSunShadowHeight>
        <surfaceType>Item</surfaceType>
        <canOverlapZones>false</canOverlapZones>
        <comps>
            <li Class="PipeSystem.CompProperties_ConvertThingToResource">
                <pipeNet>SoS2_ExoticNet</pipeNet>
                <thing>ArchotechExoticParticles</thing>
            </li>
        </comps>
        <researchPrerequisites>
            <li>ArchotechExotics</li>
        </researchPrerequisites>
    </ThingDef>
</Defs>